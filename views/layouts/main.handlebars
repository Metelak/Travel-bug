<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Travel Bug</title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Sansita+Swashed:wght@900&display=swap"
			rel="stylesheet"
		/>
	</head>

	<body>
		<div class="wrapper">
			<header class="navbar py-4 mb-3">
				<div class="flex-row justify-space-between container-fluid">
					<h1 class="display-4">
						<a
							class="main-title navbar-brand fs-1 text-light font-weight-bold"
							href="/"
						>Travel Bug</a>
					</h1>
					<nav>
						{{#if loggedIn}}
							<a
								href="/travels"
								class="navbar-brand text-light font-weight-bold"
							>My Travels</a>
							<button
								href="/logout"
								id="logout"
								class="btn btn-no-style navbar-brand text-light font-weight-bold"
							>Logout</button>
						{{else}}
							<a
								href="/login"
								class="navbar-brand text-light font-weight-bold"
							>Login</a>
						{{/if}}
					</nav>
				</div>
			</header>
			<main>
				{{{body}}}
			</main>
			<footer>
				<div class="text-center">Happy Travels!</div>
			</footer>
		</div>

		{{#if loggedIn}}
			<script src="/javascript/logout.js"></script>
		{{/if}}
	</body>

</html>