<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Travel Bug</title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
	</head>

	<body>
		<div class="wrapper">
			<header class="py-4 mb-3">
					<div class="flex-row justify-space-between align-center container-fluid mx-auto">
						<h1 class="display-4">
							<a class="main-title text-light font-weight-bold" href="/">Travel Bug</a>
						</h1>
						<nav>
							{{#if loggedIn}}
								<a href="/travels" class="" >My Travels</a>
								<a href="/" id="logout" class="">logout</a>
							{{else}}
								<a href="/login" class="text-light font-weight-bold">Login</a>
							{{/if}}
						</nav>
					</div>
			</header>
			<main>
				{{{body}}}
			</main>
			<footer>
				<div class="text-center">Happy Travels!</div>
			</footer>
		</div>

		{{#if loggedIn}}
			<script src="/javascript/logout.js"></script>
		{{/if}}
	</body>

</html>