	<body>
		<div class="wrapper">
			<header>
				<h1>
					<a href="/">Travel Bug</a>
				</h1>
				<nav>
					{{#if loggedIn}}
						<a href="/travels">My Travels</a>
						<button id="logout" class="btn-no-style">logout</button>
					{{else}}
						<a href="/login">Login</a>
					{{/if}}
				</nav>
			</header>
			<main>
				{{{body}}}
			</main>
			<footer>
				<div class="text-center">Happy Travels!</div>
			</footer>
		</div>

		{{#if loggedIn}}
			<script src="/javascript/logout.js"></script>
		{{/if}}
	</body>

</html>