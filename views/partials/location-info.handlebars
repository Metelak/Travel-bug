<div class="location card m-3 col-auto" id="location-card">
	<img
		src="{{picture}}"
		class="card-img-top img-responsive"
		alt="picture of {{title}}"
	/>
	<div class="title card-body text-center">
		<a
			class="card-title fs-4 fw-bold text-dark"
			href="/location/{{id}}"
		>{{title}}</a>
	</div>
	<div class="location-text card-body mb-3">
		{{location}}{{text}}
	</div>
	<div class="meta card-body">
		Posted by:
		{{user.username}}
		on
		{{format_date createdAt}}<br />
		<a href="/location/{{id}}">{{comments.length}}
			{{format_plural "comment" comments.length}}
		</a>
		<div>
			{{#if ratings}}
				{{#each ratings}}
					Rated:
					{{rating}}
					<img
						src="/img/star-on.png"
						style="height: 15px; width: 15px; margin-bottom: 3.5px;"
					/>
					by
					{{user.username}}
					<br />
				{{/each}}
			{{else}}
				No Ratings
			{{/if}}
		</div>

	</div>
	<div class="like-btn-container card-body text-center">
		<button
			id="like-button"
			data-location="{{id}}"
			class="btn btn-outline-success"
			type="like"
		>Add to My Travels</button>
	</div>
</div>